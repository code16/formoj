{
    "private": true,
    "scripts": {
        "preinstall": "cd ../packages/formoj && npm install",
        "js:dev": "NODE_OPTIONS=--openssl-legacy-provider cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "js:watch": "npm run js:dev -- --watch",
        "js:production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "dev": "(cd ../packages/formoj && npm run dev) && npm run js:dev",
        "watch": "(cd ../packages/formoj && npm run dev) && concurrently --kill-others \"cd ../packages/formoj && npm run watch\" \"npm run js:watch\"",
        "production": "NODE_OPTIONS=--openssl-legacy-provider (cd ../packages/formoj && npm run build) && npm run js:production",
        "prod": "npm run production"
    },
    "devDependencies": {
        "axios": "^0.18.1",
        "bootstrap": "^4.0.0",
        "concurrently": "^4.1.2",
        "cross-env": "^5.1",
        "jquery": "^3.2",
        "laravel-mix": "^5.0.0",
        "lodash": "^4.17.5",
        "popper.js": "^1.12",
        "resolve-url-loader": "^2.3.1",
        "sass": "^1.17.2",
        "sass-loader": "^7.1.0",
        "vue": "^2.5.17",
        "vue-template-compiler": "^2.6.7"
    },
    "dependencies": {
        "formoj": "file:../packages/formoj"
    }
}
